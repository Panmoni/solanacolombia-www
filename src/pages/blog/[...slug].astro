  }

  .blog-content a:hover {
    text-decoration: underline;
  }

  .blog-content strong {
    font-weight: 600;
    color: #111827;
  }

  .blog-content code {
    background-color: #f3f4f6;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-family:
      ui-monospace, SFMono-Regular, "SF Mono", Menlo, Consolas,
