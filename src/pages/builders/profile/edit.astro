---
// src/pages/builders/profile/edit.astro
import Layout from "../../../layouts/Layout.astro";
import { getSession } from "../../../lib/auth";

const session = await getSession(Astro.cookies);
if (!session?.wallet) {
  return Astro.redirect("/builders");
}
---

<Layout title="Editar Perfil | Construyendo Juntos">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-6">
      <a
        href="/builders/dashboard"
        class="text-purple-600 hover:text-purple-700">‚Üê Volver al Dashboard</a
      >
    </div>

    <section class="hero mb-12 text-center">
      <h1 class="text-4xl font-bold mb-4">Editar Perfil</h1>
      <p class="text-xl text-gray-600">Actualiza tu informaci√≥n de perfil</p>
    </section>

    <section class="signup p-8">
      <form id="profile-form" class="space-y-4" method="POST">
        <input type="hidden" name="wallet" value={session.wallet} />

        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1"
            >Nombre completo *</label
          >
          <input
            id="name"
            name="name"
            type="text"
            placeholder="Tu nombre completo"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
          />
        </div>

        <div>
          <label
            for="email"
            class="block text-sm font-medium text-gray-700 mb-1">Email *</label
          >
          <input
            id="email"
            name="email"
            type="email"
            placeholder="tu@email.com"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
          />
        </div>

        <div>
          <label
            for="telegram"
            class="block text-sm font-medium text-gray-700 mb-1">Telegram</label
          >
          <input
            id="telegram"
            name="telegram"
            type="text"
            placeholder="@tu_usuario"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
          />
        </div>

        <div>
          <label
            for="twitter"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Twitter/X</label
          >
          <input
            id="twitter"
            name="twitter"
            type="text"
            placeholder="@tu_usuario"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
          />
        </div>

        <div>
          <label
            for="university"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Universidad (opcional)</label
          >
          <input
            id="university"
            name="university"
            type="text"
            placeholder="Universidad"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
          />
        </div>

        <button
          type="submit"
          class="w-full mt-6 px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors font-medium"
        >
          Guardar Cambios üíæ
        </button>
      </form>

      <p
        class="success hidden mt-4 p-4 bg-green-50 border border-green-200 rounded-lg text-green-800"
        id="success-msg"
      >
        ¬°Perfil actualizado exitosamente!
      </p>
    </section>
  </div>
</Layout>

<script>
  // Load current profile data
  const loadProfile = async () => {
    try {
      const res = await fetch("/api/builders/get");
      const data = await res.json();

      if (res.ok && data.builder) {
        const form = document.getElementById("profile-form") as HTMLFormElement;
        if (form) {
          (form.querySelector("#name") as HTMLInputElement).value =
            data.builder.name || "";
          (form.querySelector("#email") as HTMLInputElement).value =
            data.builder.email || "";
          (form.querySelector("#telegram") as HTMLInputElement).value =
            data.builder.telegram || "";
          (form.querySelector("#twitter") as HTMLInputElement).value =
            data.builder.twitter || "";
          (form.querySelector("#university") as HTMLInputElement).value =
            data.builder.university || "";
        }
      }
    } catch (err) {
      console.error("Error loading profile:", err);
    }
  };

  // Set up form
  const setupProfileForm = () => {
    const form = document.getElementById("profile-form") as HTMLFormElement;

    if (form) {
      // Remove existing listener to avoid duplicates
      const newForm = form.cloneNode(true) as HTMLFormElement;
      form.parentNode?.replaceChild(newForm, form);

      newForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        const data = new FormData(newForm);

        const res = await fetch("/api/builders/update", {
          method: "POST",
          body: data,
        });
        const result = await res.json();

        if (res.ok) {
          newForm.classList.add("hidden");
          const successMsg = document.getElementById("success-msg");
          if (successMsg) {
            successMsg.classList.remove("hidden");
            setTimeout(() => {
              window.location.href = "/builders/dashboard";
            }, 2000);
          }
        } else {
          alert("Error: " + (result.error || "Unknown error"));
        }
      });
    }
  };

  // Run on initial load
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", () => {
      loadProfile();
      setupProfileForm();
    });
  } else {
    loadProfile();
    setupProfileForm();
  }

  // Also listen for Astro navigation events
  document.addEventListener("astro:page-load", () => {
    loadProfile();
    setupProfileForm();
  });
</script>
