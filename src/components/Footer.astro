---
// Footer component inspired by Footer.tsx
import { Image } from "astro:assets";
import solanaColombiaLogo from "../images/solanaColombiaLogo.png";
import solanaSvg from "../images/solana.svg";
---

<footer class="bg-white border-t-2 border-dashed border-gray-300">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand Column -->
      <div class="space-y-4">
        <h3 class="font-bold text-lg text-gray-900">
          <Image
            src={solanaColombiaLogo}
            alt="Solana Colombia logo"
            class="h-6 w-6 rounded-full inline"
          />
          <span class="align-middle">Solana Colombia</span>
        </h3>
        <p
          class="inline-flex items-center gap-2 px-2.5 py-1 rounded-md bg-neutral-50 border border-neutral-200 text-[10px] font-mono uppercase tracking-widest text-neutral-500"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-purple-400 opacity-75"
            ></span>
            <span
              class="relative inline-flex rounded-full h-2 w-2 bg-purple-500"
            ></span>
          </span>
          de cero a mainnet
        </p>
      </div>

      <!-- Community Links -->
      <div>
        <h4 class="font-semibold mb-4 text-gray-900">Comunidad</h4>
        <ul class="space-y-2">
          <li>
            <a
              href="https://lu.ma/solanacolombia"
              target="_blank"
              class="text-sm text-gray-600 hover:text-blue-600 transition-colors"
            >
              Lu.ma
