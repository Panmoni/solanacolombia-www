---
// Features section with proper dashed line layout
---

<section class="py-20 bg-white relative">
  <!-- Top dashed line that fades out -->
  <div class="absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-gray-300 to-transparent border-t-2 border-dashed border-gray-300"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- First Row - 2 boxes with middle divider -->
    <div class="grid md:grid-cols-2 gap-0 mb-8 relative">
      <!-- Vertical divider between top boxes -->
      <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-0.5 bg-gray-300 border-l-2 border-dashed border-gray-300 transform -translate-x-1/2"></div>
      
      <!-- Left Box -->
      <div class="p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-2">
          Graveyard it.
        </h3>
        <p class="text-gray-600 mb-4">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit sed do.
        </p>
        
        <div class="space-y-3">
          <!-- Content placeholder -->
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <p class="text-sm text-gray-600">Content goes here</p>
          </div>
        </div>
      </div>

      <!-- Right Box -->
      <div class="p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-2">
          Task discussions.
        </h3>
        <p class="text-gray-600 mb-4">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit sed do eiusmod.
        </p>
        
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
          <p class="text-sm text-gray-600">Content goes here</p>
        </div>
      </div>
    </div>

    <!-- Middle horizontal dashed line -->
    <div class="w-full h-0.5 bg-gray-300 border-t-2 border-dashed border-gray-300 mb-8"></div>

    <!-- Second Row - 3 boxes with vertical dividers -->
    <div class="grid md:grid-cols-3 gap-0 relative">
      <!-- Vertical dividers between bottom boxes -->
      <div class="hidden md:block absolute left-1/3 top-0 bottom-0 w-0.5 bg-gray-300 border-l-2 border-dashed border-gray-300 transform -translate-x-1/2"></div>
      <div class="hidden md:block absolute left-2/3 top-0 bottom-0 w-0.5 bg-gray-300 border-l-2 border-dashed border-gray-300 transform -translate-x-1/2"></div>
      
      <!-- Left Box -->
      <div class="p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-2">
          Notifications.
        </h3>
        <p class="text-gray-600 mb-4">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit sed do eiusmod.
        </p>
        
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
          <p class="text-sm text-gray-600">Content goes here</p>
        </div>
      </div>

      <!-- Middle Box -->
      <div class="p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-2">
          Project insights.
        </h3>
        <p class="text-gray-600 mb-4">
          Track progress and performance across all your projects and teams.
        </p>
        
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
          <p class="text-sm text-gray-600">Content goes here</p>
        </div>
      </div>

      <!-- Right Box -->
      <div class="p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-2">
          Team collaboration.
        </h3>
        <p class="text-gray-600 mb-4">
          Work together seamlessly with real-time updates and shared resources.
        </p>
        
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
          <p class="text-sm text-gray-600">Content goes here</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom dashed line that fades out -->
  <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-gray-300 to-transparent border-t-2 border-dashed border-gray-300"></div>
</section>
