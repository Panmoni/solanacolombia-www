---
// Events section matching the style of Hero and Features
---

<section class="py-20 bg-gray-50 border-b-2 border-dashed border-gray-300" id="eventos">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-start">
      <!-- Left Column - Content -->
      <div>
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Próximos Eventos
        </h2>
        
        <p class="text-lg text-gray-600 mb-8 leading-relaxed">
          Únete a nuestros grupos y mantente al día con los próximos eventos
        </p>
        
        <button class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold transition-colors duration-200 flex items-center gap-2">
          View All Events
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>

      <!-- Right Column - Events List -->
      <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
        <div class="space-y-6">
          <!-- Event Group 1 -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Tomorrow Friday</h3>
            <div class="space-y-4">
              <!-- Event 1 -->
              <div class="flex items-start gap-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
                <div class="flex-1">
                  <div class="text-sm text-gray-600 mb-1">8:30 AM - 9:30 AM COT</div>
                  <h4 class="font-medium text-gray-900 mb-1">Bogotá Solana Meetup</h4>
                  <div class="text-sm text-gray-600 mb-2">Bogotá, Colombia</div>
                  <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">Networking</span>
                </div>
                <div class="w-16 h-16 bg-gray-200 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-xs text-gray-500">Event Image</span>
                </div>
              </div>

              <!-- Event 2 -->
              <div class="flex items-start gap-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
                <div class="flex-1">
                  <div class="text-sm text-gray-600 mb-1">2:00 PM - 4:00 PM COT</div>
                  <h4 class="font-medium text-gray-900 mb-1">Medellín Blockchain Workshop</h4>
                  <div class="text-sm text-gray-600 mb-2">Medellín, Colombia</div>
                  <span class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Workshop</span>
                </div>
                <div class="w-16 h-16 bg-gray-200 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-xs text-gray-500">Event Image</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Event Group 2 -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Aug 29 Friday</h3>
            <div class="space-y-4">
              <!-- Event 3 -->
              <div class="flex items-start gap-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
                <div class="flex-1">
                  <div class="text-sm text-gray-600 mb-1">6:00 PM - 8:00 PM COT</div>
                  <h4 class="font-medium text-gray-900 mb-1">Cali Solana Hackathon</h4>
                  <div class="text-sm text-gray-600 mb-2">Cali, Colombia</div>
                  <span class="inline-block bg-purple-100 text-purple-800 text-xs px-2 py-1 rounded-full">Hackathon</span>
                </div>
                <div class="w-16 h-16 bg-gray-200 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-xs text-gray-500">Event Image</span>
                </div>
              </div>
            </div>
          </div>

          <!-- More events placeholder -->
          <div class="text-center py-8">
            <p class="text-gray-500 text-sm">More events coming soon...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
